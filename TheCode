    public static void chkDb() throws Exception {
		try{
			Connection con = getConnection();
			Statment ins = conI.createStatement();
			String state = "SELECT * FROM players WHERE usrDb = '"+usr+"' AND pasDb = '"+psw+"'";
			ins.executeUpdate(state);
			ins.close;
			System.out.println.-ip-("User found");
			sw++;
			if(sw > 1){
				System.out.println("Duplicate user");
				
			}
			else if (usrDb.compareTo(ImportedUsr) = 0 && pasDb.compareTo(ImportedUsr) = 0){
				dispose();
				new okno1.setVisible();
				
			}
			else{
				System.out.println("No such user or you forgot your password / username");
			}
		}catch(Exception e){
			Systen.out.println(e);
			System.out.prinln("User not found");
		}
	}
    public static void importDb(String username, String password) throws Exception{
        usr = username;
        psw = password;
        try{
            Connection conI = getConnection();
            Statement ins = conI.createStatement();
            String dbop = "INSERT IF NOT EXIST INTO players (usernames, passwords) VALUES ('"+usr+"', '"+psw+"')"; 
            ins.executeUpdate(dbop);
            ins.close();
            System.out.println("import succsesful");
        }catch(Exception e){
            System.out.println(e);
        }
    }
    public static void createTable() throws Exception{
            try{
                Connection con = getConnection();
                PreparedStatement create = con.prepareStatement("CREATE TABLE IF NOT EXISTS players(id int NOT NULL AUTO_INCREMENT, usernames varchar(255), passwords varchar(255), PRIMARY KEY(id))");
                create.executeUpdate();
            }catch(Exception e){
            System.out.println(e);
            }finally{System.out.println("Complete");}
    }
    public static Connection getConnection() throws Exception{
        try{
            String driver = "com.mysql.jdbc.Driver";
            String url = "jdbc:mysql://db4free.net:3306/step123";
            String username = "stephano123";
            String password = "password";
            Class.forName(driver);
            
            Connection conn = DriverManager.getConnection(url,username,password);
            System.out.println("Connected");
            return conn;
        }catch(Exception e){System.out.println(e);}
        return null;
    }
    
