    private void LoginButtonMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_LoginButtonMouseClicked
        if(UsernameIn.getText().isEmpty() || PasswordIn.getPassword().length == 0)
        {
         JOptionPane.showMessageDialog(null, "Password or Username is missing!", "Error", JOptionPane.ERROR_MESSAGE);

        }
        else
        {
        dispose();
        new Loby().setVisible(true);
        }

    }//GEN-LAST:event_LoginButtonMouseClicked

